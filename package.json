{
  "name": "example",
  "version": "0.0.1",
  "private": true,
  "homepage": "http://ethanneff.github.io/example",
  "scripts": {
    "start": "react-native start",
    "ios": "react-native run-ios",
    "android": "react-native run-android",
    "web": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest --coverage -u",
    "lint": "tsc && tslint --fix -p tsconfig.json -c tslint.json"
  },
  "dependencies": {
    "appcenter": "1.11.0",
    "appcenter-analytics": "1.11.0",
    "appcenter-crashes": "1.11.0",
    "react": "16.7.0",
    "react-art": "16.7.0",
    "react-dom": "16.7.0",
    "react-native": "0.57.8",
    "react-native-firebase": "5.1.1",
    "react-native-keyboard-aware-scroll-view": "0.8.0",
    "react-native-vector-icons": "6.1.0",
    "react-native-web": "0.9.10",
    "react-redux": "6.0.0",
    "react-router-dom": "4.3.1",
    "react-router-native": "4.3.0",
    "react-scripts": "2.1.2",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@semantic-release/changelog": "3.0.1",
    "@semantic-release/git": "7.0.6",
    "@semantic-release/github": "5.2.7",
    "@types/jest": "23.3.10",
    "@types/react": "16.7.13",
    "@types/react-native": "0.57.23",
    "@types/react-native-vector-icons": "4.6.4",
    "@types/react-redux": "6.0.11",
    "@types/react-router-dom": "4.3.1",
    "@types/react-router-native": "4.2.3",
    "@types/react-test-renderer": "16.0.3",
    "babel-jest": "23.6.0",
    "codecov": "3.1.0",
    "husky": "1.2.1",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "react-test-renderer": "16.7.0",
    "semantic-release": "15.13.1",
    "travis-deploy-once": "5.0.11",
    "ts-jest": "23.10.5",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",
    "typescript": "3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged && echo 'yarn lint && yarn test'",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/git"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/github"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "babel": {
    "presets": [
      "module:metro-react-native-babel-preset"
    ]
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.(jsx?)$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-router-native)/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "window": true,
      "ts-jest": {
        "tsConfig": "./tsconfig.jest.json"
      }
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
